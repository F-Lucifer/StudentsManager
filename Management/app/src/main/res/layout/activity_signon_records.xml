<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/back"
    >

    <RelativeLayout
        android:id="@+id/signon_records_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/signon_records_return"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_return"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到记录"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/signon_records_layout_top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/main_gv_item_beautify"
        android:layout_below="@id/signon_records_layout_top"
        >


        <TextView
            android:id="@+id/signon_records_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="选择日期"
            />

        <Spinner
            android:id="@+id/signon_records_sp_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/signon_records_layout_top3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/main_gv_item_beautify"
        android:layout_below="@id/signon_records_layout_top1">

        <TextView
            android:id="@+id/signon_records_tv_yes"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="查询"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/main_btn_deletecancel_beautify"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/signon_records_layout_top3"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <ListView
            android:id="@+id/signon_records_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_menu_beautify"
            android:divider="@color/divider"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/listview_selector"
            android:padding="5dp">

        </ListView>

    </RelativeLayout>


</RelativeLayout>