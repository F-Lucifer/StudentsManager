<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:id="@+id/night_records_Item_tv_name"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="名字"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/night_records_Item_tv_room"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textColor="@color/LightSkyBlue"
            android:text="寝室编号"
            android:maxLines="2"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        >
        <TextView
            android:id="@+id/night_records_Item_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到成功"
            android:textColor="@color/daoQing"
            android:gravity="center"
            android:textSize="17dp"
            />

        <TextView
            android:id="@+id/night_records_Item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到日期"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"
            android:textSize="15dp"
            />



    </LinearLayout>


</RelativeLayout>