<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <Button
            android:id="@+id/main_chat_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_btn_delete_beautify"
            android:layout_weight="1"
            android:text="删除"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/main_chat_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_btn_deletecancel_beautify"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:visibility="gone"
            />

    </LinearLayout>



    <com.example.management.util.CircleImageView
        android:id="@+id/main_chat_Item_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/main_chat_Item_img"
        android:layout_toLeftOf="@+id/main_chat_Item_tv_time"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/main_chat_Item_tv_name"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="用户名"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/main_chat_Item_tv_text"
            android:textSize="13dp"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textColor="@color/gray"
            android:text="输入的消息"
            android:maxLines="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/main_chat_Item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19:41"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        />


    </RelativeLayout>