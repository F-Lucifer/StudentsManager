<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dp"
    >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/holidays_records_Item_tv_time"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="请假时间"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/holidays_records_Item_tv_text"
            android:textSize="12dp"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textColor="@color/gray"
            android:text="请假事由"
            android:maxLines="2"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/holidays_records_Item_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成功"
        android:textColor="@color/daoQing"
        android:layout_toLeftOf="@+id/holidays_records_Item_tv_startDate"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/holidays_records_Item_tv_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19:41"
        android:textColor="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:textSize="11dp"
        />

</RelativeLayout>