<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_title_back"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/main_news_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_news_tv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="学校要闻"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/lightGray"
                    android:textSize="17dp"

                    />

                <TextView
                    android:id="@+id/main_news_line"
                    android:layout_width="80dp"
                    android:layout_gravity="center"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_notice_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_notice_tv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="通知公告"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/lightGray"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/main_notice_line"
                    android:layout_width="80dp"
                    android:layout_gravity="center"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>